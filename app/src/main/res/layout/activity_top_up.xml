<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_top_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.utkun.shuttleapp.TopUpActivity">

    <EditText
        android:id="@+id/ccno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:ems="10"
        android:hint="Credit Card No"
        android:inputType="number"
        android:singleLine="true"/>

    <EditText
        android:id="@+id/ccmonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ccno"
        android:layout_alignStart="@+id/ccno"
        android:layout_below="@+id/ccno"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="Month"
        android:inputType="number"/>

    <EditText
        android:id="@+id/ccyear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ccmonth"
        android:layout_alignStart="@+id/ccmonth"
        android:layout_below="@+id/ccmonth"
        android:layout_marginTop="13dp"
        android:ems="10"
        android:hint="Year"
        android:inputType="number"/>

    <EditText
        android:id="@+id/ccv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ccyear"
        android:layout_alignStart="@+id/ccyear"
        android:layout_below="@+id/ccyear"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="CCV"
        android:inputType="number"/>

    <EditText
        android:id="@+id/amounttoadd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ccv"
        android:layout_alignRight="@+id/ccv"
        android:layout_below="@+id/ccv"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="Amount to Add"
        android:inputType="number"/>

    <Button
        android:text="PAY NOW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/amounttoadd"
        android:layout_alignLeft="@+id/amounttoadd"
        android:layout_alignStart="@+id/amounttoadd"
        android:layout_marginTop="21dp"
        android:id="@+id/paynow"
        android:layout_alignRight="@+id/amounttoadd"
        android:layout_alignEnd="@+id/amounttoadd"
        style="@style/Widget.AppCompat.Button" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/paynow"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"/>
</RelativeLayout>
